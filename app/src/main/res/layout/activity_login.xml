<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#23213F">

    <EditText
        android:id="@+id/et_loginForm_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="@string/login_preview"
        android:textColor="#FFFFFF"
        android:background="#4F4F4F"

        />
    <EditText
        android:id="@+id/et_loginForm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_loginForm_login"
        android:inputType="text"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="@string/password_preview"
        android:textColor="#FFFFFF"
        android:background="#4F4F4F"
        />

    <TextView
        android:id="@+id/tv_tokenview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_loginForm_pass"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:background="#4F4F4F"
        />

    <Button
        android:id="@+id/b_buttonlogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/button_text"
        />



</RelativeLayout>

